-
  const superchargeSection = {
    title: 'Supercharge your workflow',
    paragraph: "We've got the tools to boost your productivity."
  }

-
  const superchargeArticles = {
    create: {
      title: 'Create blacklists',
      paragraph: `Ensure sensitive information never makes its way to your
        clipboard by excluding certain sources.`,
      iconName: 'blacklist'
    },
    plain: {
      title: 'Plain text snippets',
      paragraph: `Remove unwanted formatting from copied text for a
        consistent look`,
      iconName: 'text'
    },
    sneak: {
      title: 'Sneak preview',
      paragraph: `Quick preview of all snippets on your Clipboard for easy
        access`,
      iconName: 'preview'
    }
  }

+section(superchargeSection.title, superchargeSection.paragraph)
  .columns.columns--three
    +article(superchargeArticles.create.title, superchargeArticles.create.paragraph, superchargeArticles.create.iconName)
    +article(superchargeArticles.plain.title, superchargeArticles.plain.paragraph, superchargeArticles.plain.iconName)
    +article(superchargeArticles.sneak.title, superchargeArticles.sneak.paragraph, superchargeArticles.sneak.iconName)
